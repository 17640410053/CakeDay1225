        `comment`.user_id,
        `comment`.goods_id,
        `comment`.star,
        `comment`.img,
        `comment`.createTime,
        users.username,
        users.user_id AS userId,
        users.`password`,
        users.phone,
        users.mail,
        users.birth,
        users.gender,
        users.image,
        users.token,
        users.createtime
        FROM `comment`
        INNER JOIN users ON `comment`.user_id = users.user_id
